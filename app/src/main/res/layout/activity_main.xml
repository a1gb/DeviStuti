<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guru.devistuti.MainActivity">

    <TextView
        android:text="Devi Stuti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="sans-serif-smallcaps" />


    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/kali"
        android:id="@+id/kali" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kali Stuti"
        android:layout_below="@id/kali"
        android:paddingLeft="60dp"
        android:paddingTop="5dp"
        />


    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/lakshmi"
        android:layout_toRightOf="@+id/kali"
        android:layout_below="@+id/text"
        android:id="@+id/durga" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Durga Stuti"
        android:layout_below="@id/durga"
        android:layout_toRightOf="@id/kali"
        android:paddingLeft="55dp"
        android:paddingTop="5dp"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/kali"
        app:srcCompat="@drawable/lakshmi1"
        android:id="@+id/lxmi" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Laxmi Stuti"
        android:layout_below="@id/lxmi"
        android:paddingTop="5dp"
        android:paddingLeft="55dp"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/lxmi"
        android:layout_below="@+id/durga"
        app:srcCompat="@drawable/saraswati"
        android:id="@+id/saraswati" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saraswati Stuti"
        android:layout_below="@id/saraswati"
        android:layout_toRightOf="@id/lxmi"
        android:paddingLeft="50dp"
        android:paddingTop="5dp"/>


</RelativeLayout>
